{
  "manifest_version": 3,
  "name": "Promptin",
  "version": "1.0",
  "description": "A Chrome extension that helps you manage your prompts",
  "icons": {
    "16": "pluginIcon.png",
    "32": "pluginIcon.png",
    "48": "pluginIcon.png",
    "128": "pluginIcon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Promptin"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script/content.js"]
    }
  ]
} 